<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="org.pos2d.webapi.entities.area" table="utilitygis.area">
      <id name="gid">
      	<generator class="identity" />
      </id>
       <property name="areaname" type="string"/>
       <property name="geom" type="org.hibernate.spatial.GeometryType"/>
       <property name="cityname" type="string"/>
       <property name="parentareaname" type="string"/>
       <property name="areatype" type="string"/>     
        </class>
</hibernate-mapping>